{
  "expo": {
    "name": "TimoRides Driver",
    "slug": "timo-driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2847bc"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.timorides.driver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TimoRides needs your location to show nearby ride requests and navigate to pickup locations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TimoRides needs your location to track your position while driving and provide real-time updates to riders."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2847bc"
      },
      "package": "com.timorides.driver",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TimoRides to use your location to track your position while driving."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2847bc"
        }
      ]
    ]
  }
}

