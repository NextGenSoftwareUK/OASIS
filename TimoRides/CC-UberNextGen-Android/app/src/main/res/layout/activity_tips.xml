<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".history.TipsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin15dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m50dp"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/m50dp"
                android:text="Tips"
                android:gravity="center"
                android:textSize="@dimen/s20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="@dimen/m10dp"
            android:layout_marginRight="16dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/m10dp"
                android:layout_marginTop="90dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sam Lincan"
                        android:textStyle="bold"
                        android:textColor="@color/colorfontBlack"
                        android:textSize="25sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123-IND"
                        android:textStyle="bold"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/txt24"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wow! A 5 star ! \n Wanna add tip for Sam?"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/m20dp"
                        android:textColor="@color/colorfontBlack"
                        android:textSize="28sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/m15dp"
                        android:layout_marginBottom="@dimen/m15dp"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_margin="@dimen/m20dp"
                            android:textSize="@dimen/s24sp"
                            android:textColor="@color/colorfontBlack"
                            android:background="@drawable/ic_tip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_margin="@dimen/m20dp"
                            android:textSize="@dimen/s24sp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/ic_tip_selected" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2"
                            android:gravity="center"
                            android:layout_margin="@dimen/m20dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/s24sp"
                            android:textColor="@color/colorfontBlack"
                            android:background="@drawable/ic_tip" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_other_amount"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/m40dp"
                        android:layout_marginLeft="@dimen/m30dp"
                        android:layout_marginRight="@dimen/m30dp"
                        android:textColor="@color/colorPink"
                        android:textSize="@dimen/s20sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvSubmitReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/signin_btn_grad"
                        android:layout_marginLeft="@dimen/m15dp"
                        android:layout_marginRight="@dimen/m15dp"
                        android:paddingTop="@dimen/m15dp"
                        android:paddingBottom="@dimen/m15dp"
                        android:textSize="@dimen/s20sp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="Done" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="May be next time"
                        android:layout_margin="@dimen/m20dp"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/txt24"
                        android:gravity="center" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/m130dp"
            android:layout_height="@dimen/m130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/m100dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorfontBlack"
            android:src="@drawable/personimg" />
    </FrameLayout>
</RelativeLayout>