<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/m20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_booking_successful"
            android:layout_marginTop="@dimen/m30dp"
            android:layout_marginBottom="@dimen/m10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/s18sp"
            android:textStyle="bold"
            android:textColor="@color/colorfontBlack"
            android:text="Booking successful"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:textStyle="bold"
            android:textSize="@dimen/s14sp"
            android:textColor="@color/colorGrey"
            android:text="Your booking has been confirmed.\nDriver will pickup you in 2 minutes."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/colorGrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m60dp"
            android:id="@+id/buttonOk">
        <TextView
            android:id="@+id/tvcancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/m10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Cancel"
            android:textSize="@dimen/s16sp"
            android:textColor="@color/colorGrey" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"/>
            <TextView
                android:id="@+id/tvDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/m10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Done"
                android:textSize="@dimen/s16sp"
                android:textStyle="bold"
            android:textColor="@color/colorfontBlack" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>