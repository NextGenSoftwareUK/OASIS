<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".payment.PaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:background="@color/colorBlack"
            android:layout_height="0dp"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:background="#f9f9f9"
            android:layout_height="0dp"
            android:layout_weight="7" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m10dp"
        android:layout_marginBottom="@dimen/m20dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/Margin20dp"
                android:src="@drawable/ic_left_arrow" />

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/Margin20dp"
                android:drawablePadding="@dimen/m10dp"
                android:paddingLeft="@dimen/m10dp"
                android:paddingTop="@dimen/m10dp"
                android:paddingRight="@dimen/m20dp"
                android:paddingBottom="@dimen/m10dp"
                android:text="Done"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/s20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/s30sp"
            android:layout_marginLeft="@dimen/Margin20dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llTodays"
            android:layout_marginLeft="@dimen/Margin15dp"
            android:layout_marginRight="@dimen/Margin15dp"
            android:layout_marginTop="@dimen/m50dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="@dimen/m10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardElevation="@dimen/m15dp"
            android:outlineAmbientShadowColor="@color/colorBlack"
            xmlns:card_view="http://schemas.android.com/tools"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivproduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/m20dp"
                            android:src="@drawable/ic_cash" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/m10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Cash"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontBlack"
                            android:textSize="@dimen/s20sp" />

                        <TextView
                            android:id="@+id/tvReviewcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:text="Default Payment Method"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/s16sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/Margin20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/m20dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:text="Cradit card"
                    android:layout_marginTop="@dimen/m30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="@dimen/s18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/m30dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_visa_logo"
                    android:padding="@dimen/m15dp"
                    android:drawablePadding="@dimen/m10dp"
                    android:background="@drawable/bg_payment_edit"
                    android:text="**** **** **** 4567"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="@dimen/s16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/m30dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_paypal"
                    android:padding="@dimen/m15dp"
                    android:drawablePadding="@dimen/m10dp"
                    android:drawableRight="@drawable/ic_check_mark"
                    android:background="@drawable/bg_payment_edit"
                    android:text="abcd.hijk@xyz.com"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="@dimen/s16sp" />
  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/m30dp"
                    android:layout_marginBottom="@dimen/m20dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_mastercard"
                    android:padding="@dimen/m15dp"
                    android:drawablePadding="@dimen/m10dp"
                    android:background="@drawable/bg_payment_edit"
                    android:text="**** **** **** 1234"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="@dimen/s16sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="7"
                    android:scaleType="fitXY"
                    android:src="#f9f9f9" />


            </LinearLayout>
            </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/signin_btn_grad"
    android:layout_margin="@dimen/Margin20dp"
    android:layout_alignParentBottom="true"
    android:paddingTop="@dimen/m15dp"
    android:paddingBottom="@dimen/m15dp"
    android:paddingLeft="@dimen/m30dp"
    android:paddingRight="@dimen/m20dp"
    android:textSize="@dimen/s20sp"
    android:drawablePadding="@dimen/m20dp"
    android:drawableLeft="@drawable/ic_plus"
    android:gravity="center_vertical"
    android:textColor="@color/colorWhite"
    android:text="Add New Method"/>

    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>