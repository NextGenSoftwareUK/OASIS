<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".history.RatingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Margin15dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m50dp"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/m50dp"
            android:text="Rating"
            android:gravity="center"
            android:textSize="@dimen/s20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="@dimen/m10dp"
            android:layout_marginRight="16dp"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/m10dp"
            android:layout_marginTop="90dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sam Lincan"
                android:textStyle="bold"
                android:textColor="@color/colorfontBlack"
                android:textSize="25sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123-IND"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/txt24"
                android:gravity="center"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How is your trip?"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/m20dp"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="28sp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_feedback_will_help_improve_driving_experience"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/m15dp"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/s14sp"
                    android:gravity="center"
                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/Margin20dp"
                    android:layout_marginBottom="@dimen/m20dp"
                    android:isIndicator="false"
                    android:max="5"
                    android:rating="4"
                    android:theme="@style/RatingBar" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="@dimen/Margin20dp"
                    android:layout_marginRight="@dimen/Margin20dp"
                    android:hint="Additional Comments..."
                    android:gravity="start"
                    android:textSize="@dimen/s16sp"
                    android:textStyle="bold"
                    android:padding="@dimen/m10dp"
                    android:layout_marginBottom="@dimen/m10dp"
                    android:background="@drawable/bg_payment_edit"/>

                <TextView
                    android:id="@+id/tvSubmitReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/signin_btn_grad"
                    android:layout_margin="@dimen/m15dp"
                   android:paddingTop="@dimen/m15dp"
                   android:paddingBottom="@dimen/m15dp"
                    android:textSize="@dimen/s20sp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Submit Review"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/m130dp"
            android:layout_height="@dimen/m130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/m100dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorfontBlack"
            android:src="@drawable/personimg" />
    </FrameLayout>
</RelativeLayout>