<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ride.PromoActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.currentplacedetailsonmap.MapsActivityCurrentPlace"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvMenu"
            android:layout_width="@dimen/m40dp"
            android:layout_height="@dimen/m40dp"
            app:cardElevation="@dimen/m15dp"
            android:src="@drawable/ic_gps_fixed_indicator"
            android:layout_marginLeft="@dimen/Margin20dp"
            android:layout_marginTop="@dimen/Margin20dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/m20dp"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/m40dp"
                android:layout_height="@dimen/m40dp"
                android:src="@drawable/ic_back" />
        </androidx.cardview.widget.CardView>

        <!--  <androidx.cardview.widget.CardView
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:background="@drawable/bg_bottom"
              android:layout_marginTop="@dimen/m20dp"
              card_view:cardBackgroundColor="@color/colorWhite">
  -->

        <!-- </androidx.cardview.widget.CardView>-->
        <LinearLayout
            android:id="@+id/llRideSelecte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="PROMO CODE"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/m30dp"
                android:layout_marginBottom="@dimen/m30dp"
                android:layout_gravity="center"
                android:textColor="@color/colorfontBlack"
                android:textSize="@dimen/s18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/m20dp"
                android:background="@color/colorView"/>
            <LinearLayout
                android:id="@+id/layoutSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/m20dp"
                android:gravity="center"
                android:background="@drawable/edt_phone">
                <ImageView
                    android:layout_width="@dimen/m50dp"
                    android:layout_height="@dimen/m50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/m10dp"
                    android:layout_marginLeft="@dimen/m10dp"
                    android:padding="@dimen/m10dp"
                    android:src="@drawable/ic_promo_code"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGrey"/>
                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m15dp"
                    android:background="@null"
                    android:hint="Promo code"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:textSize="16dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tvAplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signin_btn_grad"
                android:layout_margin="@dimen/Margin20dp"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/m15dp"
                android:paddingBottom="@dimen/m15dp"
                android:paddingLeft="@dimen/m30dp"
                android:paddingRight="@dimen/m20dp"
                android:textSize="@dimen/s20sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="Aplay"/>
        </LinearLayout>




    </FrameLayout>
</LinearLayout>