<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom"
    android:elevation="@dimen/m50dp"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="140dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m20dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardUseCompatPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/m40dp"
        android:layout_gravity="center_vertical"
        android:weightSum="5">


        <LinearLayout
            android:id="@+id/llCurrentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/m10dp"
                android:src="@drawable/ic_picupicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m5dp"
                    android:textAllCaps="true"
                    android:text="Pickup"
                    android:textColor="@color/colorGrey"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@null"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="14dp"
                    android:hint="My current location" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/m10dp"
            android:layout_marginBottom="@dimen/m10dp"
            android:layout_marginRight="@dimen/m10dp"
            android:layout_marginLeft="@dimen/m40dp"
            android:background="@color/colorView" />

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/m10dp"
                android:src="@drawable/ic_destination_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m5dp"
                    android:textAllCaps="true"
                    android:text="Destination"
                    android:textColor="@color/colorGrey"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorfontBlack"
                    android:textSize="14dp"
                    android:hint="My destination location" />
                <ImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="@dimen/Margin20dp"
                    android:layout_height="@dimen/Margin20dp"
                    android:layout_marginRight="@dimen/m15dp"
                    android:src="@drawable/ic_cancle"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--  </androidx.cardview.widget.CardView>-->
    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m15dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/m5dp"
        android:textColor="@color/colorGrey"
        android:text="Nearby Locations" />

    <TextView
        android:id="@+id/tvManci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorfontBlack"
        android:drawableLeft="@drawable/ic_destination_icon_small"
        android:drawablePadding="@dimen/m10dp"
        android:layout_marginBottom="@dimen/Margin5dp"
        android:layout_marginTop="@dimen/m15dp"
        android:textStyle="bold"
        android:text="Mansi Circle,vastrapur" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/m10dp"
            android:background="@color/colorView" />
    <TextView
        android:id="@+id/tvPrem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m5dp"
        android:layout_marginBottom="@dimen/m8dp"
        android:text="Pramvati Food Park"
        android:drawableLeft="@drawable/ic_destination_icon_small"
        android:drawablePadding="@dimen/m10dp"
        android:textColor="@color/colorfontBlack"
        android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/m10dp"
            android:background="@color/colorView" />
    <TextView
        android:id="@+id/tvVstrapur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorfontBlack"
        android:drawableLeft="@drawable/ic_destination_icon_small"
        android:drawablePadding="@dimen/m10dp"
        android:textStyle="bold"
        android:text="Vastrapur Lack"/>

    </LinearLayout>

</LinearLayout>