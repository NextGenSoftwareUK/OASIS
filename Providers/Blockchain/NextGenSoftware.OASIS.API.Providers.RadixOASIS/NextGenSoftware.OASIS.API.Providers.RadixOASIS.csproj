<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <PackageId>NextGenSoftware.OASIS.API.Providers.RadixOASIS</PackageId>
        <Company>NextGen Software Ltd</Company>
        <Product>WEB4 OASIS API Radix OASIS Provider</Product>
        <Title>WEB4 OASIS API Radix OASIS Provider</Title>
        <Summary>WEB4 OASIS API Radix OASIS Provider is one of the many WEB2/WEB3 providers that plug in and integrate into the OASIS.</Summary>
        <Description>WEB4 OASIS API Radix OASIS Provider enables cross-chain bridge operations and native Radix blockchain integration for the OASIS API.</Description>
        <PackageProjectUrl>https://github.com/NextGenSoftwareUK/Our-World-OASIS-API-HoloNET-HoloUnity-And-.NET-HDK</PackageProjectUrl>
        <Authors>David Ellams (NextGen Software Ltd), Quantum Street Team</Authors>
        <PackageTags>OASIS API; Radix; WEB4; Provider; Bridge; Cross-Chain</PackageTags>
        <PackageReleaseNotes>Initial Release with Bridge Support.</PackageReleaseNotes>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/NextGenSoftwareUK/Our-World-OASIS-API-HoloNET-HoloUnity-And-.NET-HDK</RepositoryUrl>
        <Copyright>Copyright Â© NextGen Software Ltd 2025</Copyright>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
        <Version>1.0.0</Version>
        <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="RadixDlt.RadixEngineToolkit" Version="2.2.2" />
      <PackageReference Include="NBitcoin" Version="7.0.50" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\..\OASIS Architecture\NextGenSoftware.OASIS.API.Core\NextGenSoftware.OASIS.API.Core.csproj" />
      <ProjectReference Include="..\..\..\OASIS Architecture\NextGenSoftware.OASIS.Common\NextGenSoftware.OASIS.Common.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Update="README.md">
        <PackagePath>\</PackagePath>
        <Pack>True</Pack>
      </None>
    </ItemGroup>

</Project>

