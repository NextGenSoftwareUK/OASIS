    <script src="reform-dashboard.js"></script>
    <script>
        // Portal-specific JavaScript
        function switchTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.portal-tab-content').forEach(content => {
                content.style.display = 'none';
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.portal-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            const selectedContent = document.getElementById(`tab-${tabName}`);
            if (selectedContent) {
                selectedContent.style.display = 'block';
            }
            
            // Add active class to selected tab
            const selectedTab = document.querySelector(`[data-tab="${tabName}"]`);
            if (selectedTab) {
                selectedTab.classList.add('active');
            }
            
            // Load Telegram gamification if switching to telegram tab
            if (tabName === 'telegram' && typeof loadTelegramGamification === 'function') {
                loadTelegramGamification();
            }
            
            // Load Reform dashboard if switching to reform tab
            if (tabName === 'reform' && typeof loadReformDashboard === 'function') {
                loadReformDashboard();
            }
            
            // Reload Telegram message section when switching to dashboard
            if (tabName === 'dashboard') {
                // Force reload after a brief delay to ensure DOM is ready
                setTimeout(() => {
                    const telegramSection = document.getElementById('telegram-message-section');
                    if (telegramSection) {
                        if (typeof loadTelegramMessageSection === 'function') {
                            loadTelegramMessageSection();
                        } else {
                            // Fallback: show button directly
                            telegramSection.innerHTML = `
                                <div class="telegram-link-button-container">
                                    <button class="telegram-link-button" onclick="switchTab('telegram')">
                                        <span class="telegram-link-button-icon"></span>
                                        <span>Link Your Telegram</span>
                                    </button>
                                </div>
                            `;
                        }
                    }
                }, 200);
            }
        }

        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            if (element) {
                navigator.clipboard.writeText(element.textContent.trim());
                // Show feedback
                const btn = event.target;
                const original = btn.textContent;
                btn.textContent = 'Copied';
                setTimeout(() => {
                    btn.textContent = original;
                }, 2000);
            }
        }

        // Load portal data
        function loadPortalData() {
            const authData = localStorage.getItem('oasis_auth');
            if (authData) {
                try {
                    const auth = JSON.parse(authData);
                    const avatar = auth.avatar;
                    
                    if (avatar) {
                        // Update header
                        const initials = (avatar.firstName?.[0] || '') + (avatar.lastName?.[0] || '') || avatar.username?.[0]?.toUpperCase() || 'OA';
                        document.getElementById('avatarInitials').textContent = initials;
                        document.getElementById('avatarName').textContent = avatar.firstName && avatar.lastName 
                            ? `${avatar.firstName} ${avatar.lastName}` 
                            : avatar.username || 'OASIS User';
                        document.getElementById('avatarId').textContent = avatar.avatarId || avatar.id || '-';
                        
                        // Update stats
                        if (avatar.karma) {
                            document.getElementById('statKarma').textContent = avatar.karma;
                        }
                        
                        // Update user menu button
                        const userBtn = document.getElementById('userMenuBtn');
                        if (userBtn) {
                            userBtn.textContent = avatar.username || 'Account';
                        }
                    }
                } catch (e) {
                    console.error('Error loading portal data:', e);
                }
            } else {
                // Not logged in - for development, load sample data instead of redirecting
                // Uncomment the line below to enable redirect in production:
                // window.location.href = '../oasisweb4 site/new-v2/index.html';
                console.log('No auth found - loading demo data');
                loadSampleData();
            }
        }

        // Load sample data for demo
