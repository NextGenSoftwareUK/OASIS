        // Load Telegram message section
        async function loadTelegramMessageSection() {
            const container = document.getElementById('telegram-message-section');
            if (!container) {
                console.log('telegram-message-section container not found');
                return;
            }

            console.log('Loading Telegram message section...');

            const authData = localStorage.getItem('oasis_auth');
            if (!authData) {
                console.log('No auth data found');
                return;
            }

            try {
                const auth = JSON.parse(authData);
                const avatarId = auth.avatar?.id || auth.avatar?.avatarId;
                
                if (!avatarId) {
                    console.log('No avatar ID found');
                    return;
                }

                // Check if Telegram is linked (use function from telegram-gamification.js if available)
                let linkStatus = false;
                if (typeof checkTelegramLinkStatus === 'function') {
                    try {
                        linkStatus = await checkTelegramLinkStatus();
                    } catch (e) {
                        console.error('Error checking link status:', e);
                    }
                } else {
                    // Fallback: try to check via API
                    try {
                        const token = auth.token;
                        if (token) {
                            const response = await fetch(`https://api.oasisweb4.one/api/telegram/link-status/${avatarId}`, {
                                headers: {
                                    'Authorization': `Bearer ${token}`,
                                    'Content-Type': 'application/json'
                                }
                            });
                            if (response.ok) {
                                const data = await response.json();
                                linkStatus = data.result?.linked === true;
                            }
                        }
                    } catch (e) {
                        console.error('Error checking link status via API:', e);
                    }
                }
                
                if (linkStatus) {
                    // Load Telegram activity
                    await loadTelegramActivityForMessages(avatarId, auth.token);
                }
            } catch (error) {
                console.error('Error loading Telegram message section:', error);
                // Ensure button is always visible even on error
                const container = document.getElementById('telegram-message-section');
                if (container) {
                    container.innerHTML = `
                        <div class="telegram-link-button-container">
                            <button class="telegram-link-button" onclick="linkTelegramAccountFromMessages()">
                                <span class="telegram-link-button-icon"></span>
                                <span>Link Your Telegram</span>
                            </button>
                        </div>
                    `;
                }
            }
        }

        // Wrapper function for linking from messages section
        function linkTelegramAccountFromMessages() {
            if (typeof linkTelegramAccount === 'function') {
                linkTelegramAccount();
            } else {
                // Switch to Telegram tab if function not available
                switchTab('telegram');
            }
        }

        // Load Telegram activity for messages section
        async function loadTelegramActivityForMessages(avatarId, token) {
            const container = document.getElementById('telegram-message-section');
            if (!container) return;

            try {
                // Use oasisAPI if available, otherwise use fetch
                let rewards = [];
                let stats = {};
                
                if (typeof oasisAPI !== 'undefined' && oasisAPI.request) {
                    const rewardsResponse = await oasisAPI.request(
                        `/api/telegram/gamification/rewards/${avatarId}?limit=5`
                    );
                    rewards = rewardsResponse.result?.rewards || [];
                    
                    const statsResponse = await oasisAPI.request(
                        `/api/telegram/gamification/stats/${avatarId}`
                    );
                    stats = statsResponse.result || {};
                } else if (token) {
                    // Fallback to direct fetch
                    try {
                        const [rewardsRes, statsRes] = await Promise.all([
                            fetch(`https://api.oasisweb4.one/api/telegram/gamification/rewards/${avatarId}?limit=5`, {
                                headers: {
                                    'Authorization': `Bearer ${token}`,
                                    'Content-Type': 'application/json'
                                }
                            }),
                            fetch(`https://api.oasisweb4.one/api/telegram/gamification/stats/${avatarId}`, {
                                headers: {
                                    'Authorization': `Bearer ${token}`,
                                    'Content-Type': 'application/json'
                                }
                            })
                        ]);
                        
                        if (rewardsRes.ok) {
                            const rewardsData = await rewardsRes.json();
                            rewards = rewardsData.result?.rewards || [];
                        }
                        
                        if (statsRes.ok) {
                            const statsData = await statsRes.json();
                            stats = statsData.result || {};
                        }
                    } catch (e) {
                        console.error('Error fetching Telegram data:', e);
                    }
                }

                container.innerHTML = `
                    <div class="telegram-activity-box">
                        <div class="telegram-activity-header">
                            <div class="telegram-activity-title">
                                <span class="telegram-activity-title-icon"></span>
                                <span class="telegram-activity-title-text">Telegram Activity</span>
                            </div>
                            <div class="telegram-activity-status">
                                <span class="telegram-activity-status-dot"></span>
                                <span>Connected</span>
                            </div>
                        </div>
                        
                        <div class="telegram-activity-stats">
                            <div class="telegram-activity-stat">
                                <div class="telegram-activity-stat-value">${formatNumber(stats.totalKarmaEarned || 0)}</div>
                                <div class="telegram-activity-stat-label">Karma</div>
                            </div>
                            <div class="telegram-activity-stat">
                                <div class="telegram-activity-stat-value">${formatNumber(stats.totalTokensEarned || 0, 1)}</div>
                                <div class="telegram-activity-stat-label">Tokens</div>
                            </div>
                            <div class="telegram-activity-stat">
                                <div class="telegram-activity-stat-value">${stats.nftsEarned || 0}</div>
                                <div class="telegram-activity-stat-label">NFTs</div>
                            </div>
                        </div>

                        ${rewards.length > 0 ? `
                            <div class="telegram-activity-feed">
                                ${rewards.slice(0, 5).map(reward => `
                                    <div class="telegram-activity-item">
                                        <div class="telegram-activity-item-icon">${getRewardIcon(reward.type)}</div>
                                        <div class="telegram-activity-item-content">
                                            <div class="telegram-activity-item-title">${getRewardTitle(reward.type)}</div>
                                            <div class="telegram-activity-item-description">${reward.description || 'Telegram activity'}</div>
                                            ${reward.karmaAwarded > 0 || reward.tokensAwarded > 0 ? `
                                                <div class="telegram-activity-item-reward">
                                                    ${reward.karmaAwarded > 0 ? `+${reward.karmaAwarded} karma` : ''}
                                                    ${reward.tokensAwarded > 0 ? `+${reward.tokensAwarded} tokens` : ''}
                                                </div>
                                            ` : ''}
                                        </div>
                                        <div class="telegram-activity-item-time">${formatTimeAgo(reward.timestamp)}</div>
                                    </div>
                                `).join('')}
                            </div>
                            <div class="telegram-activity-view-all">
                                <button class="telegram-activity-view-all-btn" onclick="switchTab('telegram')">
                                    View Full Telegram Dashboard 
                                </button>
                            </div>
                        ` : `
                            <div class="empty-state">
                                <p class="empty-state-text">No Telegram activity yet. Start engaging to earn rewards!</p>
                            </div>
                        `}
                    </div>
                `;
            } catch (error) {
                console.error('Error loading Telegram activity:', error);
                container.innerHTML = `
                    <div class="telegram-link-button-container">
                        <button class="telegram-link-button" onclick="linkTelegramAccount()">
                            <span class="telegram-link-button-icon"></span>
                            <span>Link Your Telegram</span>
                        </button>
                    </div>
                `;
            }
        }

        // Helper functions for Telegram message section (if not already defined globally)
        if (typeof formatNumber === 'undefined') {
            window.formatNumber = function(num, decimals = 0) {
                if (num === null || num === undefined) return '0';
                return num.toLocaleString('en-US', { 
                    minimumFractionDigits: decimals, 
                    maximumFractionDigits: decimals 
                });
            };
        }

        if (typeof formatTimeAgo === 'undefined') {
            window.formatTimeAgo = function(timestamp) {
                const date = new Date(timestamp);
                const now = new Date();
                const diffMs = now - date;
                const diffMins = Math.floor(diffMs / 60000);
                const diffHours = Math.floor(diffMs / 3600000);
                const diffDays = Math.floor(diffMs / 86400000);

                if (diffMins < 1) return 'Just now';
                if (diffMins < 60) return `${diffMins}m ago`;
                if (diffHours < 24) return `${diffHours}h ago`;
                if (diffDays < 7) return `${diffDays}d ago`;
                return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
            };
        }

        if (typeof getRewardIcon === 'undefined') {
            window.getRewardIcon = function(type) {
                const icons = {
                    'mention': '',
                    'link_share': '',
                    'quality_post': '',
                    'helpful_answer': '',
                    'code_example': '',
                    'tutorial': '',
                    'viral': '',
                    'invite': '',
                    'daily_active': '',
                    'weekly_active': '',
                    'nft_reward': ''
                };
                return icons[type] || '';
            };
        }

        if (typeof getRewardTitle === 'undefined') {
            window.getRewardTitle = function(type) {
                const titles = {
                    'mention': 'Mentioned OASIS',
                    'link_share': 'Shared OASIS link',
                    'quality_post': 'Created quality post',
                    'helpful_answer': 'Helped community member',
                    'code_example': 'Shared code example',
                    'tutorial': 'Created tutorial',
                    'viral': 'Created viral content',
                    'invite': 'Invited new member',
                    'daily_active': 'Daily active bonus',
                    'weekly_active': 'Weekly active bonus',
                    'nft_reward': 'Earned NFT'
                };
                return titles[type] || 'Telegram activity';
            };
        }

        // Make loadTelegramMessageSection globally available
        window.loadTelegramMessageSection = loadTelegramMessageSection;
        window.linkTelegramAccountFromMessages = linkTelegramAccountFromMessages;

        // Call on page load
        window.addEventListener('DOMContentLoaded', () => {
            loadPortalData();
            // Load Telegram message section immediately
            loadTelegramMessageSection();
            // Also try again after scripts load
            setTimeout(() => {
                loadTelegramMessageSection();
            }, 1000);
            // Load sample data after a short delay to show empty states first
            setTimeout(loadSampleData, 500);
        });
    </script>
</body>
</html>
